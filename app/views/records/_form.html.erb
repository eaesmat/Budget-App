<%= form_with model: @record, url: user_records_path, method: :post do |form| %>
  <% if record.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(record.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
        <% record.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <% form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id, id: :group_user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="mx-5">
    <% form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control", placeholder:"Name" %>
  </div>
  <br />

  <div class="mx-5">
    <% form.label :amount, style: "display: block" %>
    <%= form.text_field :amount, class:"form-control", placeholder:"Amount" %>
  </div>
  <br />
  <br />

  <%= form.select :group_id, @groups&.map{ |group| [group.name, group.id] }, { :prompt => 'Select Group'}, class:"form-control mb-3" %> 

  <div class="mx-5 text-center ">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
